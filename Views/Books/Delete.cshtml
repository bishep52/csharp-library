@model DB_connect.Models.Book

@{
    ViewData["Title"] = "Удалить книгу";
}

<div class="container py-5">
    <h2 class="mb-4 text-center text-danger">🗑️ Удалить книгу</h2>

    <div class="alert alert-warning text-center mx-auto" style="max-width: 600px;">
        <p><strong>Вы уверены, что хотите удалить книгу?</strong></p>
        <p><strong>@Model.Title</strong> — @Model.Author (@Model.Year)</p>
    </div>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center gap-3">
            <a asp-action="Index" class="btn btn-secondary">🙅 Отмена</a>
            <button type="submit" class="btn btn-danger">🗑️ Удалить</button>
        </div>
    </form>
</div>
